<p id="notice"><%= notice %></p>

<%= link_to 'Cadastrar', new_cargo_path, class: 'btn btn-success' %>


<table class="table table-hover table-striped table-bordered">
  <thead class="bordered-blueberry">
  <tr>
    <th>#</th>
    <th>Descrição </th>
    <th>Liderança</th>
    <th width="20"></th>
    <th width="20"></th>
    <th width="20"></th>

  </tr>
  </thead>

  <tbody>
  <% @cargos.each do |cargo| %>
      <tr>
        <td><%= cargo.id %></td>
        <td><%= cargo.descricao %></td>
        <td><%= cargo.lidera %></td>
        <td>
          <%= link_to cargo, title: 'Visualizar', class: 'btn btn-default btn-xs shiny icon-only success' do %>
              <%= fa_icon 'search' %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_cargo_path(cargo), title: 'Editar', class: 'btn btn-default btn-xs shiny icon-only success' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
        </td>
        <td>
          <%= link_to cargo, title: 'Editar', class: 'btn btn-default btn-xs shiny icon-only success', method: :delete, data: { confirm: 'Are you sure?' } do %>
              <%= fa_icon 'close' %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
