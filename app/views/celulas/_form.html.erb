<%= form_for @celula, :html => {:class => "form-horizontal"} do |f| %>

  <% if @celula.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@celula.errors.count, "error") %> erros </h2>
      <ul>
      <% @celula.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
        <label class="col-lg-1 control-label">Descrição</label>
        <div class="col-lg-11">
            <%= f.text_field  :descricao, class: 'form-control', placeholder: 'Descrição'  %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-lg-1 control-label">Sub Equipe</label>
      <div class="col-lg-11">
        <%=  f.collection_select(:sub_equipe_id,  @sub_equipes , :id, :descricao, { :prompt => true  } )    %>
      </div>
    </div>

    <%= link_to 'Listar', celulas_path, class: 'btn btn-blue' %>

    <%= f.submit class: 'btn btn-blue' %>

<% end %>
