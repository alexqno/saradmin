<%= bootstrap_form_tag url: '/report', layout: :horizontal,  label_col: "col-sm-1", control_col: "col-sm-11" do |f| %>

    <%= hidden_field_tag :arquivo, 'idx-form' %>

    <%= f.number_field :ano, label: 'Ano', value: @ano, step: 1, label_col:'col-sm-1',  control_col: 'col-sm-2' %>

    <div class="form-group">

      <%= label_tag :cadastro, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-2">
        <%= number_field_tag :cadastro, nil, {class: 'form-control'} %>
      </div>

      <%= label_tag :nome, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-8">
        <%= text_field_tag :nome, nil, {class: 'form-control'} %>
      </div>

    </div>

    <div class="form-group">

      <%= label_tag :cargo_id, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-5">
        <%= select_tag :cargo_id, nil, {class: 'form-control'} %>
      </div>

      <%= label_tag :igreja_id, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-5">
        <%= select_tag :igreja_id, nil, {class: 'form-control'} %>
      </div>

    </div>

    <div class="form-group">

    <%= label_tag :rede_id, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-5">
        <%= select_tag :rede_id, nil, {class: 'form-control'} %>
      </div>

      <%= label_tag :equipe_id, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-5">
        <%= select_tag :equipe_id, nil, {class: 'form-control'} %>
      </div>

    </div>

    <div class="form-group">

      <%= label_tag :sub_equipe_id, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-5">
        <%= select_tag :sub_equipe_id, nil, {class: 'form-control'} %>
      </div>

      <%= label_tag :celula_id, nil, class: 'col-sm-1 control-label no-padding-right' %>
      <div class="col-sm-5">
        <%= select_tag :celula_id, nil, {class: 'form-control'} %>
      </div>

    </div>

    <div class="form-group">

      <div class="col-sm-12 text-right">
        <%= link_to '#', title: 'Gerar RelatÃ³rio', class: 'btn btn-success btn-circle btn-xs btn-report', data: {action: report_contribuicao_anual_index_path(format: 'pdf')} do %>
            <%= fa_icon 'print' %>
        <% end %>
      </div>

    </div>

<% end %>