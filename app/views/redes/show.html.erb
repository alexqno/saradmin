<form action="" class="form-horizontal">

  <div class="form-title">
    Informações
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label">Igreja</label>
    <div class="col-sm-11">
      <input type="text" class='form-control' disabled value="<%= @rede.igreja.descricao %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label">Descrição</label>
    <div class="col-sm-5">
      <input type="text" class='form-control' disabled value="<%=	 @rede.descricao  %>">
    </div>
    <label class="col-sm-1 control-label">Responsável</label>
    <div class="col-sm-5">
      <input type="text" class='form-control' disabled value="<%= @rede.responsavel.pessoa.nome %>">
    </div>
  </div>

  <%= link_to 'Listar', redes_path, class: 'btn btn-blue' %>
  <%= link_to 'Editar', edit_rede_path(@rede), class: 'btn btn-blue' %>

</form>