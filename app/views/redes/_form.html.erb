<%= bootstrap_form_for(@rede,layout: :horizontal, label_col: 'col-sm-1', control_col: 'col-sm-11') do |f| %>

    <%= hidden_field_tag :arquivo, 'new-edit-form' %>

    <%= hidden_field_tag :id, @rede.id %>

    <%= f.select :igreja_id, [], {label_col:'col-sm-1', control_col: 'col-sm-11', label_class: 'no-padding-right'} %>

    <%= f.select :responsavel_id, [], {label_col:'col-sm-1', control_col: 'col-sm-11', label_class: 'no-padding-right'} %>

    <%= f.text_field :descricao, label: 'Descrição', placeholder: 'Descrição', label_class: 'no-padding-right'  %>

    <%= link_to 'Listar', redes_path, class: 'btn btn-blue' %>

    <%= f.submit class: 'btn btn-blue' %>

<% end %>
