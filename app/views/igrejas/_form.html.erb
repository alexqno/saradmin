<%= form_for @igreja do |f| %>

    <% if @igreja.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@igreja.errors.count, "error") %> não pode ser salvo, contato o suporte!</h2>
          <ul>
            <% @igreja.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-title">
      Informações
    </div>

    <div class="form-group">
          <%= f.text_field  :descricao, class: 'form-control', placeholder: 'Descrição'  %>
    </div>

    <div class="form-title">
      Endereço
    </div>

    <%= f.fields_for :enderecos  do |endereco| %>

        <div class="form-group">
          <%= endereco.text_field  :logradouro, class: 'form-control', placeholder: 'Logradouro    '  %>
        </div>

        <div class="form-group">
          <%= endereco.text_field  :numero, class: 'form-control', placeholder: 'Número'  %>
        </div>
        <%= endereco.fields_for :bairro  do |bairro| %>
            <div class="form-group">
              <%= bairro.text_field  :nome, class: 'form-control', placeholder: 'Bairro'  %>
            </div>
        <% end %>

        <div class="form-group">


        <%= endereco.select :estado_id, options_for_select(@estados.collect { |country|
                                                       [country.nome.titleize, country.id] }, 1), {}, { id: 'estados_select' } %>

        <%= endereco.select :cidade_id, options_for_select(@cidades.collect { |city|
                                                    [city.nome.titleize, city.id] }, 0), {}, { id: 'cidades_select' } %>
        </div>

        <div class="form-group">
          <%= endereco.text_field  :complemento, class: 'form-control', placeholder: 'Complemento'  %>
        </div>

        <div class="form-group">
          <%= endereco.text_field  :cep, class: 'form-control', placeholder: 'Cep'  %>
        </div>


    <% end %>


    <%= f.submit class: 'btn btn-blue' %>



<% end %>

