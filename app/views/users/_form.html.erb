<%= form_for(@user, html: {class: 'form-horizontal', role: 'form'}) do |u| %>
    <div class="form-group">
      <%= u.label :name, class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
        <%= u.text_field :name, type: 'text', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= u.label :grupo, class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
        <%= u.select(:grupo_id, @grupos_options, {}, {class: 'form-control'}) %>
      </div>
    </div>

    <br>

    <div class="form-group" align="center">
      <button type="submit" class="btn btn-default">Confirmar</button>
    </div>
<% end %>