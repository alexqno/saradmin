<h1> Usu√°rios </h1>
<table class="table table-hover table-bordered">
  <thead>
  <tr>
    <th align="left">Nome</th>
    <th align="left" width="200">e-mail</th>
    <th align="left" width="200">Grupo</th>
    <th width="20"></th>
    <th width="20"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <% if user.ativo? %>
          <% color = 'success' %>
      <% else %>
          <% color = 'danger' %>
      <% end %>
      <tr class="<%= color %>">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.grupo.descricao %></td>
        <td align="center">
          <%= link_to usuario_path(user.id), title: 'Visualizar', class: 'btn btn-' + color +' btn-circle btn-xs' do %>
              <%= fa_icon 'search' %>
          <% end %>
        </td>
        <td align="center">
          <%= link_to root_path, title: 'Alterar', class: 'btn btn-' + color +' btn-circle btn-xs' do %>
              <%= fa_icon 'pencil' %>
          <% end %>
        </td>
      </tr>
  <%end%>
  </tbody>
</table>