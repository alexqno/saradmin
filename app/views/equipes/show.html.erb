<form action="" class="form-horizontal">

  <div class="form-title">
    Informações
  </div>

  <div class="form-group">
    <label class="col-lg-1 control-label">Descrição</label>
    <div class="col-lg-11">
      <input type="text" class='form-control' disabled value="<%=	 @equipe.descricao  %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-1 control-label">Rede</label>
    <div class="col-lg-11">
      <input type="text" class='form-control' disabled value="<%=	 @equipe.rede  %>">
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-1 control-label">Responsável</label>
    <div class="col-lg-11">
      <input type="text" class='form-control' disabled value="<%= @equipe.responsavel.pessoa.nome %>">
    </div>
  </div>




  <%= link_to 'Listar', equipes_path, class: 'btn btn-blue' %>
  <%= link_to 'Editar', edit_equipe_path(@equipe), class: 'btn btn-blue' %>

</form>