<%= form_for @equipe, :html => {:class => "form-horizontal"} do |f| %>

    <%= render 'layouts/erros', object: @equipe %>

    <div class="form-group">
        <label class="col-lg-1 control-label">Descrição</label>
        <div class="col-lg-11">
            <%= f.text_field  :descricao, class: 'form-control', placeholder: 'Descrição'  %>
        </div>
    </div>

    <div class="form-group">

      <label class="col-lg-1 control-label">Rede</label>

      <div class="col-lg-5">
        <%= f.select :rede_id, options_for_select(@redes.collect { |se|
              [se.descricao.titleize, se.id] }, 0), {}, { class: 'form-control' } %>
      </div>

      <label class="col-lg-1 control-label">Responsável</label>
      <div class="col-lg-5">
        <%= f.select :responsavel_id, options_for_select(@responsaveis.collect { |m|
           [m.pessoa.nome.titleize, m.id] }, 0), {}, { class: 'form-control' } %>
      </div>

    </div>

    <%= link_to 'Listar', equipes_path, class: 'btn btn-blue' %>

    <%= f.submit class: 'btn btn-blue' %>

<% end %>
